{
  "name": "wedding-website",
  "version": "1.0.0",
  "description": "A simple wedding website for two computer programmers",
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/output.css",
    "watch:css": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/output.css --watch",
    "start": "npm run build:css && npx concurrently \"npm run watch:css\" \"npx http-server -p 3000\"",
    "build": "npm run build:css"
  },
  "keywords": [
    "wedding"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "concurrently": "^9.2.1",
    "http-server": "^14.1.1",
    "tailwindcss": "^4.1.18"
  }
}
